{
    "tasks": [
        {
            "type": "shell",
            "label": "XCPlite: sync to Pi",
            "command": "rsync",
            "args": [
                "-avz",
                "--delete",
                "--exclude=build/",
                "--exclude=.git/",
                "--exclude=\"*.o\"",
                "--exclude=\"*.out\"",
                "--exclude=\"*.a\"",
                "./",
                "rainer@192.168.0.205:~/XCPlite-RainerZ/"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "rsync to Raspberry Pi rainer@192.168.0.205:~/XCPlite-RainerZ/"
        },
        {
            "type": "shell",
            "label": "XCPlite: sync to Pi (sync.sh)",
            "command": "./sync.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Call ./sync.sh - rsync to Raspberry Pi rainer@192.168.0.205:~/XCPlite-RainerZ/"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang Aktive Datei kompilieren",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Vom Debugger generierte Aufgabe."
        },
        {
            "type": "shell",
            "label": "XCPlite: build hello_xcp",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "hello_xcp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build hello_xcp target using CMake",
            "dependsOn": "cmake configure"
        },
