        {
            "type": "shell",
            "label": "XCPlite: Remote build all on Pi",
            "command": "ssh",
            "args": [
                "rainer@192.168.0.205",
                "cd ~/XCPlite-RainerZ && cmake --build build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "XCPlite: Remote configure CMake on Pi",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build all targets on Raspberry Pi"
        },
        {
            "type": "shell",
            "label": "XCPlite: Remote kill XCP processes on Pi",
            "command": "ssh",
            "args": [
                "rainer@192.168.0.205",
                "pkill -f 'hello_xcp\\|cpp_demo\\|c_demo\\|multi_thread_demo' || true"
            ],
            "group": "build",
            "detail": "Kill any running XCP demo processes on Raspberry Pi"
        },
    ],
