            "label": "cmake configure",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-S",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Configure CMake build system"
        },
        {
            "type": "shell",
            "label": "XCPlite: Remote configure CMake on Pi",
            "command": "ssh",
            "args": [
                "rainer@192.168.0.205",
                "cd ~/XCPlite-RainerZ && cmake -B build -S . -DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "dependsOn": "XCPlite: sync to Pi",
            "detail": "Configure CMake build system on Raspberry Pi"
        },
        {
            "type": "shell",
            "label": "XCPlite: Remote build hello_xcp on Pi",
            "command": "ssh",
            "args": [
                "rainer@192.168.0.205",
                "cd ~/XCPlite-RainerZ && cmake --build build --target hello_xcp"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
