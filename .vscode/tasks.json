            "label": "XCPlite: sync to Pi",
            "command": "rsync",
            "args": [
                "-avz",
                "--delete",
                "--exclude=build/",
                "--exclude=.git/",
                "--exclude=\"*.o\"",
                "--exclude=\"*.a\"",
                "./",
                "rainer@192.168.0.206:~/XCPlite-RainerZ/"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "rsync to Raspberry Pi rainer@192.168.0.206:~/XCPlite-RainerZ/"
